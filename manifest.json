{
  "manifest_version": 2,
  "name": "Pleyes - Pleasing your eyes",
  "version": "0.1",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["content.js"]
    }
  ],
  "permissions": [
     "tabs", "<all_urls>"
   ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Please your eyes",
    "default_popup": "popup.html"
  }
}
